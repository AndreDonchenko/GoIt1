    <bean id="categoryDishDao" class="ua.goit.andre.ee10.dao.HCategoryDishDao"/>

    <bean id="employeeController" class="ua.goit.andre.ee10.web.EmployeeController"/>
    <bean id="menuController" class="ua.goit.andre.ee10.web.MenuController"/>
    <bean id="orderController" class="ua.goit.andre.ee10.web.OrderController"/>

    <bean id="employeeService" class="ua.goit.andre.ee10.service.EmployeeService"/>
    <bean id="orderService" class="ua.goit.andre.ee10.service.OrderService"/>
    <bean id="menuService" class="ua.goit.andre.ee10.service.MenuService"/>

